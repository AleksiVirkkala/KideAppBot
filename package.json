{
  "name": "kideappbot",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksivirkkala/kideappbot.git"
  },
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/common/*",
    "packages/configs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "author": "Aleksi Virkkala",
  "license": "UNLICENSED",
  "devDependencies": {
    "eslint": "^8.36.0",
    "eslint-config-base": "workspace:*",
    "pnpm": "^8.1.0",
    "prettier": "^2.8.7",
    "turbo": "1.8.3"
  },
  "engines": {
    "node": ">=19.0.0"
  },
  "packageManager": "pnpm@8.1.0"
}
